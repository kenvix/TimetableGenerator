<%- include("partial/header") %>
<div class="card">

    <div class="card-header"><%= title %></div>
    <div class="card-body" id="aboutInfo">
        <button type="button" class="btn btn-info" id="class-import">导入已导出的课程</button>
        <br/><br/>

        <form>
            <div class="form-group">
                <input type="text" class="form-control" name="name" required="" maxlength="20" placeholder="姓名">
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="stuid" required="" maxlength="20" placeholder="学号">
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>时间</th>
                            <th>周一</th>
                            <th>周二</th>
                            <th>周三</th>
                            <th>周四</th>
                            <th>周五</th>
                            <th>周六</th>
                            <th>周日</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for (var classTime = 0; classTime < 5; classTime++) { %>
                            <tr>
                                <td><%= getHumanReadableClassTime(classTime) %></td>

                                <% for (var classDay = 0; classDay < 7; classDay++) { %>
                                    <td>
                                        <button type="button" id="class-<%= classDay %>-<%= classTime %>" data-time="<%= classTime %>" data-time-readable="<%= getHumanReadableClassTime(classTime) %>" data-day="<%= classDay %>" class="btn btn-success" onclick="signRequest(this)" style="width: 100%"> + </button>
                                    </td>
                                <% } %>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <input type="submit" class="btn btn-primary" value="导出课程文件" />
        </form>
    </div>
</div>

<form id="sign-form">
    <div class="modal fade" tabindex="-1" role="dialog" id="sign-modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">登记课程: #<span id="sign-title-day"></span> <span id="sign-title-time"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" class="form-control" name="class_name" required="" maxlength="20" placeholder="课程名，例如 '高等数学 A (2)'">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="class-week" name="class_week" required="" maxlength="20" placeholder="周次，例如 1-5,7,9,11">
                    </div>

                    <div class="card card-flat mb-3">
                        <div class="card-body">
                            <p><b>填写说明</b></p>

                            <p class="mb-1"><b>课程名：</b> 课程的名称</p>
                            <p class="mb-1"><b>周次：</b></p>
                            <ul>
                                <li>使用半角逗号 , 来分隔不同周次，例如 <b>1,2,3</b> 周</li>
                                <li>可以使用横线表示范围，例如 <b>1-3</b> 表示1~3周</li>
                                <li>例如: 1-5,7,9,11</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="application-decline-submit">保存课程</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    let classes = {};

    function reloadClasses() {
        
    }

    function signRequest(target) {
        $("#sign-title-day").html($(target).attr("data-day"));
        $("#sign-title-time").html($(target).attr("data-time-readable"));

        $('#sign-modal').modal('show');
    }

    $("#sign-form").submit(e => {
        let weekList = [];
        const inputWeek = $("#class-week").val().replace("~", "-").replace(" ", "").split(",");

        console.info("Committed class: " + $("#class-week").val());

        inputWeek.forEach(element => {
            if (element.indexOf("-") > 0) {
                const rangeBorder = element.split("-");

                if (rangeBorder.length >= 2 && !isNaN(rangeBorder[0]) && !isNaN(rangeBorder[1])) {
                    for (let i = parseInt(rangeBorder[0]); i <= parseInt(rangeBorder[1]); i++) {
                        if (weekList.indexOf(i) < 0)
                            weekList.push(i);
                    }
                }

            } else {
                if (!isNaN(element)) {
                    let elementAsNumber = parseInt(element);

                    if (weekList.indexOf(elementAsNumber) < 0)
                        weekList.push(elementAsNumber);
                }
            }
        });

        console.log(weekList);
        return false;
    });
</script>

